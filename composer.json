{
    "name": "alazziaz/laravel-dapr",
    "description": "Laravel-friendly tooling for publishing and consuming events over Dapr Pub/Sub.",
    "keywords": [
        "laravel",
        "dapr",
        "pubsub",
        "events",
        "publisher",
        "listener",
        "invoker"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "dapr/php-sdk": "dev-main",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/container": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0"
    },
    "replace": {
        "alazziaz/laravel-dapr-foundation": "self.version",
        "alazziaz/laravel-dapr-publisher": "self.version",
        "alazziaz/laravel-dapr-listener": "self.version",
        "alazziaz/laravel-dapr-invoker": "self.version"
    },
    "conflict": {
        "alazziaz/laravel-dapr-events": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "AlazziAz\\LaravelDapr\\": "src/Foundation/src/",
            "AlazziAz\\LaravelDaprPublisher\\": "src/Publisher/src/",
            "AlazziAz\\LaravelDaprListener\\": "src/Listener/src/",
            "AlazziAz\\LaravelDaprInvoker\\": "src/Invoker/src/"
        },
        "files": [
            "src/Publisher/src/Support/helpers.php",
            "src/Invoker/src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlazziAz\\LaravelDapr\\Tests\\": "src/Foundation/tests/",
            "AlazziAz\\LaravelDaprPublisher\\Tests\\": "src/Publisher/tests/",
            "AlazziAz\\LaravelDaprListener\\Tests\\": "src/Listener/tests/",
            "AlazziAz\\LaravelDaprInvoker\\Tests\\": "src/Invoker/tests/"
        }
    },
    "scripts": {
        "test": [
            "cd src/Foundation && composer test",
            "cd src/Publisher && composer test",
            "cd src/Listener && composer test",
            "cd src/Invoker && composer test"
        ],
        "analyse": "phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlazziAz\\LaravelDapr\\ServiceProvider",
                "AlazziAz\\LaravelDaprPublisher\\ServiceProvider",
                "AlazziAz\\LaravelDaprListener\\ServiceProvider",
                "AlazziAz\\LaravelDaprInvoker\\ServiceProvider"
            ],
            "aliases": {
                "DaprInvoke": "AlazziAz\\Dapr\\Invoker\\Facades\\DaprInvoke"
            }
        }
    },
    "suggest": {
        "ext-pcntl": "Required to run listener workers efficiently."
    },
    "repositories": {
        "dapr-php-sdk": {
            "type": "vcs",
            "url": "https://github.com/dapr/php-sdk"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
